        //datepicker
        var controls = {
            leftArrow: '<i class="fal fa-angle-left" style="font-size: 1.25rem"></i>',
            rightArrow: '<i class="fal fa-angle-right" style="font-size: 1.25rem"></i>'
        }
        $('#jqsigndate').datepicker(
            {
                format: 'yyyy-mm-dd',
                orientation: "請選擇簽約日",
                todayHighlight: true,
                templates: controls
            });

        $('#datepicker_startdate').datepicker(
            {
                format: 'yyyy-mm-dd',
                orientation: "請選擇起租日",
                todayHighlight: true,
                templates: controls
