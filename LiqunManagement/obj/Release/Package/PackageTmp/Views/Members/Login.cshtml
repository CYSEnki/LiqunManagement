@model LiqunManagement.ViewModels.MembersLoginViewModel
@{
    ViewBag.Title = "登入";
    //Layout = null;
    Layout = "~/Views/Shared/smartadmin_Layout.cshtml";
}

<style>
    .validation-summary-errors {
        font-weight: 700 !important;
    }

        .validation-summary-errors ul {
            list-style-type: none; /* 去除默认的列表样式 */
            padding-left: 30px;
        }

        .validation-summary-errors li {
            color: red;
            padding: 13px 5px !important;
        }

            .validation-summary-errors li::marker {
                content: "\f071  "; /* 自定义内容，可以是其他图标或文本 */
                font-family: "Font Awesome 5 Pro" !important;
            }
    .btn-line {
        color: white;
        background-color: #00c300;
    }
        .btn-line:hover {
            color: white !important;
            background-color: #00b300 !important;
        }
</style>
<body class="mod-bg-1 mod-nav-link nav-mobile-push desktop chrome webkit pace-done">
    <div class="container-fluid p-0">
        <div class="page-wrapper auth">
            <div class="page-inner bg-brand-gradient">
                <div class="page-content-wrapper bg-transparent m-0">
                    <div class="height-10 w-100 shadow-lg px-4 bg-brand-gradient">
                        <div class="d-flex align-items-center container p-0">
                            <div class="page-logo width-mobile-auto m-0 align-items-center justify-content-center p-0 bg-transparent bg-img-none shadow-0 height-9 border-0">
                                <a href="javascript:void(0)" class="page-logo-link press-scale-down d-flex align-items-center">
                                    <img src="~/Content/smartadmin-package-4.5.1/smartadmin-html-full/dist/img/logo.png" alt="SmartAdmin WebApp" aria-roledescription="logo" />
                                    <span class="page-logo-text mr-1">力群後臺管理系統</span>
                                </a>
                            </div>
                            @*<a href="@Url.Action("Register", "Members")" class="btn-link text-white ml-auto">
                                Create Account
                            </a>*@
                        </div>
                    </div>
                    <div class="flex-1" style="background: url(img/svg/pattern-1.svg) no-repeat center bottom fixed; background-size: cover;">
                        <div class="container py-4 py-lg-5 my-lg-5 px-4 px-sm-0">
                            <div class="row">
                                <div class="col col-md-6 col-lg-7 hidden-sm-down">
                                    <h2 class="fs-xxl fw-500 mt-4 text-white">
                                        三重區在地深耕近30年的仲介公司
                                        <small class="h3 fw-300 mt-3 mb-5 text-white opacity-60">
                                            近年跨入包租代管及社會住宅包租代管
                                            (合法包租代管業者、社會住宅包租代管『新北市公會版』第二、三期得標廠商)
                                        </small>
                                    </h2>
                                    @*<a href="https://www.hbhousing.com.tw/web/A363/" class="fs-lg fw-500 text-white opacity-70">延伸資料 &gt;&gt;</a>*@
                                    <div class="d-sm-flex flex-column align-items-center justify-content-center d-md-block" style="padding-top:30px;">                                        <div class="px-0 py-1 mt-5 text-white fs-nano opacity-50">
                                            社群管理
                                        </div>
                                        <div class="d-flex flex-row opacity-70">
                                            <a href="#" class="mr-2 fs-xxl text-white">
                                                <i class="fab fa-facebook-square"></i>
                                            </a>
                                            <a href="#" class="mr-2 fs-xxl text-white">
                                                <i class="fab fa-twitter-square"></i>
                                            </a>
                                            <a href="#" class="mr-2 fs-xxl text-white">
                                                <i class="fab fa-google-plus-square"></i>
                                            </a>
                                            <a href="#" class="mr-2 fs-xxl text-white">
                                                <i class="fab fa-linkedin"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-6 col-lg-5 col-xl-4 ml-auto">
                                    <h1 class="text-white fw-300 mb-3 d-sm-block d-md-none">
                                        Secure login
                                    </h1>
                                    <div class="card p-4 rounded-plus bg-faded">

                                        @using (Html.BeginForm("Login", "Members", FormMethod.Post, new { @id = "js-login", }))
                                        {
                                            //建立登入畫面用的表格
                                            <table style="width:100%;">
                                                <tr>
                                                    <td>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.Account, new { @class = "form-label", @required = "" })
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="form-group">
                                                            @Html.TextBoxFor(model => model.Account, new { @class = "form-control form-control-lg", @required = "true" })
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.Password, new { @class = "form-label" })
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="form-group">
                                                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control form-control-lg", @required = "true", @type = "password" })
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="form-group">
                                                            @Html.ValidationSummary()
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="width:100%;">
                                                        <div class="row no-gutters">
                                                            <div class="col-lg-6 pr-lg-1 my-2">
                                                                <button type="submit" class="btn btn-line btn-block btn-lg waves-effect waves-themed" style="height:60px; font-size:32px; padding-top:7px;"><i class="fab fa-line fa-lg"></i></button>
                                                                @*<button id="js-login-btn" type="button" class="btn btn-info btn-block btn-lg waves-effect waves-themed" style="height:60px;" onclick="register()">註冊</button>*@
                                                            </div>
                                                            <div class="col-lg-6 pl-lg-1 my-2">
                                                                <button id="js-login-btn" type="submit" class="btn btn-info btn-block btn-lg waves-effect waves-ripple font-weight-bold" style="height: 60px; font-size: 18px; padding-top: 18px; ">登入</button>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </table>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="position-absolute pos-bottom pos-left pos-right p-3 text-center text-white">
                                2023 © LiqunManagement by&nbsp;<a href="#" class="text-white opacity-40 fw-500" title="EnkiDevelopment.com" target="_blank">enkidevelopment.com</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

@section scripts{
    <script>
            $("#js-login-btn").click(function(event)
            {

                // Fetch form to apply custom Bootstrap validation
                var form = $("#js-login")

                if (form[0].checkValidity() === false)
                {
                    event.preventDefault()
                    event.stopPropagation()
                }

                form.addClass('was-validated');
                // Perform ajax submit here...
            });

    @*function register() {
        debugger;
        window.location.href = "href= '@Html.Action("Register", "Members")'";
    }*@
    </script>

}